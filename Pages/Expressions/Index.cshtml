@page
@model OnlineBinaryExpressionEvaluator.Pages.Expressions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Expression[0].Operand1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expression[0].Operand2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expression[0].AdditionResult)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expression[0].MultiplicationResult)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expression[0].NegationResult1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expression[0].NegationResult2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Expression) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Operand1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operand2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdditionResult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MultiplicationResult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NegationResult1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NegationResult2)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
